/* 水平间距 */
.user_info {
  display: flex;
  padding: 20rpx;
}
.user_info .user_icon {
  padding: 0 20rpx;
}
.user_info .user_icon image {
  width: 88rpx;
  border-radius: 50%;
}
.user_info .user_desc .user_name {
  color: #000;
  font-weight: 600;
}
.user_info .user_desc .user_time {
  color: #ccc;
  font-size: 20rpx;
  padding: 10rpx 0;
}
.user_rank {
  display: flex;
  height: 80rpx;
  border-bottom: 5rpx solid #eee;
}
.user_rank .rank {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user_rank .user_collect {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.high_img image {
  border-bottom: 1rpx solid #eee;
}
.album_wrap {
  padding: 20rpx;
}
.album_wrap .album_title {
  padding: 10rpx 0;
}
.album_wrap .album_list .album_item {
  display: flex;
  padding: 10rpx 0;
  border-bottom: 10rpx solid #eee;
}
.album_wrap .album_list .album_item .album_cover {
  flex: 1;
}
.album_wrap .album_list .album_item .album_cover image {
  width: 180rpx;
  height: 180rpx;
}
.album_wrap .album_list .album_item .album_info {
  flex: 3;
  padding-left: 20rpx;
  position: relative;
}
.album_wrap .album_list .album_item .album_info .album_info_text {
  width: 100rpx;
  height: 50rpx;
  background-color: #d52a7e;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.album_wrap .album_list .album_item .album_info .album_name {
  padding: 10rpx 0;
  color: #888;
}
.album_wrap .album_list .album_item .album_info .iconfont {
  font-size: 40rpx;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  right: 10%;
  color: #000;
}
.comment .comment_title {
  padding: 15rpx;
}
.comment .comment_title .iconfont {
  color: red;
  font-size: 40rpx;
}
.comment .comment_title .comment_text {
  font-weight: 600;
  font-style: 28rpx;
  color: #666;
  margin-left: 10rpx;
}
.comment .comment_list .comment_item {
  border-bottom: 15rpx solid #eee;
}
.comment .comment_list .comment_item .comment_user {
  display: flex;
  padding: 20rpx 0;
}
.comment .comment_list .comment_item .comment_user .user_cion {
  width: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.comment .comment_list .comment_item .comment_user .user_cion image {
  width: 90%;
}
.comment .comment_list .comment_item .comment_user .user_name {
  flex: 1;
}
.comment .comment_list .comment_item .comment_user .user_name .user_nickname {
  color: #777;
}
.comment .comment_list .comment_item .comment_user .user_name .user_time {
  color: #ccc;
  font-size: 24rpx;
  padding: 5rpx;
}
.comment .comment_list .comment_item .comment_user .user_badge image {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
}
.comment .comment_list .comment_item .comment_desc {
  display: flex;
  padding: 30rpx 0;
}
.comment .comment_list .comment_item .comment_desc .comment_content {
  flex: 1;
  padding-left: 15%;
  color: #000;
}
.comment .comment_list .comment_item .comment_desc .comment_like {
  text-align: right;
}
.new .iconpinglun {
  color: aqua !important;
}
.download {
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.download .download_btn {
  width: 90%;
  height: 80%;
  background-color: #d52a7e;
  color: #fff;
  font-size: 50rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}

